<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.asuvorov.zeitmanager.DetailActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beginn"
        android:id="@+id/textView2"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/beginnEditText"
        android:layout_alignEnd="@+id/beginnEditText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="06:30"
        android:id="@+id/beginnEditText"
        android:editable="false"
        android:layout_below="@+id/textView2"
        android:layout_alignRight="@+id/bruttoStundenTextView"
        android:layout_alignEnd="@+id/bruttoStundenTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pause"
        android:id="@+id/textView8"
        android:layout_above="@+id/pauseEditText"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01:25"
        android:editable="false"
        android:id="@+id/pauseEditText"
        android:layout_alignTop="@+id/beginnEditText"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ende"
        android:id="@+id/textView3"
        android:layout_above="@+id/endeEditText"
        android:layout_toLeftOf="@+id/nettoStundenTextView"
        android:layout_toStartOf="@+id/nettoStundenTextView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15:45"
        android:id="@+id/endeEditText"
        android:editable="false"
        android:layout_above="@+id/textView6"
        android:layout_alignRight="@+id/dateTextView"
        android:layout_alignEnd="@+id/dateTextView"
        android:layout_marginRight="47dp"
        android:layout_marginEnd="47dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brutto Stunden"
        android:id="@+id/textView6"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/beginnEditText"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9.25"
        android:id="@+id/bruttoStundenTextView"
        android:layout_below="@+id/textView6"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignEnd="@+id/textView6"
        android:layout_marginRight="28dp"
        android:layout_marginEnd="28dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Netto Stunden"
        android:id="@+id/textView7"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignLeft="@+id/endeEditText"
        android:layout_alignStart="@+id/endeEditText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/nettoStundenTextView"
        android:layout_above="@+id/ueberbetragTextView"
        android:layout_alignRight="@+id/endeEditText"
        android:layout_alignEnd="@+id/endeEditText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ãœberbetrag"

        android:id="@+id/textView10"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0,00"
        android:id="@+id/ueberbetragTextView"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="06.06.2016"
        android:id="@+id/dateTextView"
        android:layout_alignBaseline="@+id/weekDayTextView"
        android:layout_alignBottom="@+id/weekDayTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/textView"
        android:background="@color/colorAccent"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Montag"
        android:id="@+id/weekDayTextView"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignRight="@+id/pauseEditText"
        android:layout_alignEnd="@+id/pauseEditText" />

    <TextView
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:id="@+id/textView4"
        android:background="@color/colorAccent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
